{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "lib": ["esnext", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // we set this to false because of TypeORM entity decorators
        "strictPropertyInitialization": false,
        "removeComments": true,
        "typeRoots": ["./src/@types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "swagger.js"],
    "exclude": ["node_modules", "build", "dist", "scripts", "tests"]
}
